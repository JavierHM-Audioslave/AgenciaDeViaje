                            label(for="nombre") Nombre
                            input(id="nombre" type="text", placeholder="Tu nombre", name="nombre", class="form-control")
                        .form-group
                            label(for="correo") Correo electr√≥nico
                            input(id="correo" type="text", placeholder="Tu correo", name="correo", class="form-control")
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea(id="correo" placeholder="Tu mensaje", name="mensaje", class="form-control")
                        input.btn.btn-success.btn-block(type="submit")